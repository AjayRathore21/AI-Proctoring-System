// Firebase Storage Security Rules
//
// Recordings are stored at: recordings/{roomId}/{sessionId}.webm
// Only authenticated users can write; public read is intentionally
// disabled â€” recordings are accessed via signed download URLs.
//
// Deploy with: firebase deploy --only storage

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /recordings/{roomId}/{sessionId} {
      // Any authenticated user can upload (upload happens server-side via the app).
      allow write: if request.auth != null
        && request.resource.size < 500 * 1024 * 1024  // 500 MB limit
        && request.resource.contentType == 'video/webm';

      // Only authenticated users can read recordings.
      allow read: if request.auth != null;
    }
  }
}
